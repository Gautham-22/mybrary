<h2 class="sub-title">Edit book</h2>
<%- include("../errorMessage.ejs") %>
<form action="/books/<%= book.id %>?_method=PUT" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title: </label>
            <input type="text" name="title" value="<%= book.title %>" required autocomplete="off">
        </div>
        <div class="form-item">
            <label for="author">Author: </label>
            <select name="author">
                <% authors.forEach(author => { %>
                    <% if(author.id == book.author) { %>
                        <option value="<%= author.id %>" selected><%= author.name %></option>
                    <% } else { %>
                        <option value="<%= author.id %>"><%= author.name %></option>
                    <% } %>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="publishDate">Publish Date: </label>
            <input type="date" name="publishDate" value="<%= book.publishDate.toISOString().split('T')[0] %>" required>
        </div>
        <div class="form-item">
            <label for="pageCount">Page count: </label>
            <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" required autocomplete="off">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item form-item-no-grow">
            <label for="cover">Cover photo: </label>
            <input type="file" name="cover" class="filepond" id="cover-upload">
        </div>
        <div class="form-item form-item-description">
            <label for="description">Description: </label>
            <textarea name="description" cols="30" rows="10"><%= book.description %></textarea>
        </div>
    </div>
    <div class="btn-row btn-row-end">
        <a class="btn btn-danger" href="/books">Cancel</a>    
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>