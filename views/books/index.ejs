<p>All books</p>
<p>Search for any book : </p>
<form action="/books" method="GET">
    <div>
        <label for="title">Title : </label>
        <input type="text" name="title" value="<%= searchOptions.title %>" autocomplete="off">
    </div>
    <div>
        <label for="publishedBefore">Published Before : </label>
        <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>" autocomplete="off">
    </div>
    <div>
        <label for="publishedAfter">Published After : </label>
        <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" autocomplete="off">
    </div>
    <input type="submit" value="Search">
</form>
<% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
        <img src="<%= book.coverImagePath %>" alt="book" width="200" height="225">  
    </a>
<% }) %>