<h2 class="sub-title">All books</h2>
<p style="margin-bottom: 1rem;">Search for any book : </p>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title : </label>
            <input type="text" name="title" value="<%= searchOptions.title %>" autocomplete="off">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="publishedBefore">Published Before : </label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>" autocomplete="off">
        </div>
    </div>  
    <div class="form-row">
        <div class="form-item">
            <label for="publishedAfter">Published After : </label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" autocomplete="off">
        </div>
    </div>
    <div class="btn-row btn-row-end">
        <input class="btn btn-primary" type="submit" value="Search">
    </div>
</form>
<% if(books.length > 0) { %>
<div class="book-grid" style="margin-top: 1rem;">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img src="<%= book.coverImagePath %>" alt="book" width="200" height="225">  
        </a>
    <% }) %>
</div>  
<% }else { %>
    <p>No books found!</p>
<% } %>