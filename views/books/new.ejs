<h2 class="sub-title">New book</h2>
<%- include("../errorMessage.ejs") %>
<form action="/books" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title: </label>
            <input type="text" name="title" required autocomplete="off">
        </div>
        <div class="form-item">
            <label for="author">Author: </label>
            <select name="author">
                <% authors.forEach(author => { %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="publishDate">Publish Date: </label>
            <input type="date" name="publishDate" required>
        </div>
        <div class="form-item">
            <label for="pageCount">Page count: </label>
            <input type="number" name="pageCount" min="1" required autocomplete="off">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item form-item-no-grow">
            <label for="cover">Cover photo: </label>
            <input type="file" name="cover" class="filepond" id="cover-upload" required>
        </div>
        <div class="form-item form-item-description">
            <label for="description">Description: </label>
            <textarea name="description" cols="30" rows="10"></textarea>
        </div>
    </div>
    <div class="btn-row btn-row-end">
        <a class="btn btn-danger" href="/books">Cancel</a>    
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>