<%- include("../errorMessage.ejs") %>
<h2 class="sub-title"><%= author.name %></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
    <form action="/authors/<%= author.id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger" type="submit">Delete</button>            
    </form>
</div>  
<br>
<% if(booksByAuthor.length > 0) { %>
    <h2>Books by author :</h2>
    <% booksByAuthor.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img src="<%= book.coverImagePath %>" alt="book" width="200" height="225"> 
        </a> 
    <% }) %>
<% } %>